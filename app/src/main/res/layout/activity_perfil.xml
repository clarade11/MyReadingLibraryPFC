<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Perfil">

    <TextView
        android:id="@+id/tvPerfilUsuario"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginTop="116dp"
        android:gravity="center"
        android:text="Usuario"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/ed"
        app:layout_constraintTop_toBottomOf="@+id/tvPerfilUsuario">
    <TextView
        android:id="@+id/tvPerfilNombre"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPerfilUsuario" />

    <TextView
        android:id="@+id/tvPerfilApellido"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Apellidos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPerfilUsuario" />
    </LinearLayout>
    <TextView
        android:id="@+id/cambiarContrasena"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Cambiar contraseña"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        />

    <TextView
        android:id="@+id/cerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:text="Cerrar sesión"
        app:layout_constraintBottom_toTopOf="@+id/cambiarTelefono"
        tools:layout_editor_absoluteX="-1dp" />

    <TextView
        android:id="@+id/cambiarTelefono"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Cambiar teléfono de contacto"
        app:layout_constraintBottom_toTopOf="@+id/cambiarContrasena"
        tools:layout_editor_absoluteX="-1dp" />

    <TextView
        android:id="@+id/tvPerfilTelefono"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Telefono"
        app:layout_constraintTop_toBottomOf="@+id/ed"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="¡Hola! Bienvenido"
        app:layout_constraintBottom_toTopOf="@+id/tvPerfilUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/novedades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:text="¡Nuestras próximas novedades!"
        app:layout_constraintBottom_toTopOf="@+id/cerrarSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Número de libros registrados:"
        app:layout_constraintEnd_toStartOf="@+id/nlibros"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPerfilTelefono" />

    <TextView
        android:id="@+id/nlibros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="140dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPerfilTelefono" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:text="Número total de recuerdos: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/nrecuerdos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/nlibros" />
</androidx.constraintlayout.widget.ConstraintLayout>