<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="paquete.activity.Perfil"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="@color/ColorPrincipal"
        android:text="¡Hola! Bienvenido"
        android:layout_marginBottom="25dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@color/fonfolibro"
        android:gravity="center"

        >
    <TextView
        android:id="@+id/tvPerfilUsuario"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Usuario"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/ed"
        app:layout_constraintTop_toBottomOf="@+id/tvPerfilUsuario">
    <TextView
        android:id="@+id/tvPerfilNombre"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="18dp"
        android:text="Nombre"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPerfilUsuario" />

    <TextView
        android:id="@+id/tvPerfilApellido"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:gravity="left"
        android:text="Apellidos"
        android:textSize="18dp"
        android:textColor="@color/black" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Teléfono :"
            android:textSize="18dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tvPerfilTelefono"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Telefono"
            android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginRight="10dp"
        android:text="Número de libros registrados:" />
    <TextView
        android:id="@+id/nlibros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPerfilTelefono" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="15dp"
    android:gravity="center">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Número total de recuerdos: " />

    <TextView
        android:id="@+id/nrecuerdos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"/>
</LinearLayout>
    <TextView
        android:id="@+id/novedades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textStyle="italic|bold"
        android:textColor="@color/ColorPrincipal"
        android:text="¡Nuestras próximas novedades!"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="90dp">
    <TextView
        android:id="@+id/cerrarSesion"
        android:background="@drawable/formabackground2"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        android:text="Cerrar sesión"/>

    <TextView
        android:id="@+id/cambiarTelefono"
        android:background="@drawable/formabackground2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="31dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Cambiar teléfono de contacto" />
    <TextView
        android:id="@+id/cambiarContrasena"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/formabackground2"
        android:text="Cambiar contraseña"
        />
    </LinearLayout>
</LinearLayout>